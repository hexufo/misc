import random
import urllib2
import re


try:
  # 2015-12-09: 1 to 1614
  rnd = random.randint(1,1614)
  pageurl  = "http://xkcd.com/"
  pageurl += str(rnd)
  pageurl += "/"
  print pageurl

  req01 = urllib2.Request(pageurl)
  response = urllib2.urlopen(req01)
  htmlpage = response.read()

  search = re.findall('http...imgs.xkcd.com.comics.*', htmlpage)
  imgurl = search[0]
  print imgurl

  req02 = urllib2.Request(imgurl)
  response = urllib2.urlopen(req02)
  img = response.read()

  imgfile = search[0][28:]
  f = open(imgfile, 'w')
  f.write(img)
  f.close()

except Exception, error_message:
  print "[-] Error: " + str(error_message)
  exit(1)


exit(0)


